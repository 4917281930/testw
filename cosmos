<body>

    <div class="controls">
        <button onclick="restart()">üîÑ Restart Animation</button>
    </div>

    <div class="container">
        <!-- Trung t√¢m COSMOS -->
        <div class="cosmos-center">COSMOS</div>

        <!-- H·ªë ƒëen (·∫©n ban ƒë·∫ßu) -->
        <div class="black-hole" id="blackHole"></div>

        <!-- 4 Networks -->
        <div class="network phase1" data-angle="0">1</div>
        <div class="network phase1" data-angle="90">2</div>
        <div class="network phase1" data-angle="180">3</div>
        <div class="network phase1" data-angle="270">4</div>
    </div>

    <div class="info" id="info">Phase 1: Orbiting around COSMOS (3s)...</div>

    <script>
        function restart() {
            const networks = document.querySelectorAll('.network');
            const blackHole = document.getElementById('blackHole');
            
            // Reset h·ªë ƒëen
            blackHole.classList.remove('active');
            
            // X√≥a t·∫•t c·∫£ style inline v√† reset v·ªÅ phase 1
            networks.forEach(net => {
                net.style.animation = '';
                net.style.transform = '';
                net.style.transition = '';
                net.style.opacity = '';
                net.className = 'network phase1';
            });

            updateInfo('Phase 1: Orbiting around COSMOS (3s)...');

            // Phase 1 ‚Üí Phase 2: Gom v·ªÅ gi·ªØa (sau 3 gi√¢y)
            setTimeout(() => {
                gatherToCenter();
            }, 3000);

            // Phase 2 ‚Üí Phase 3: Bung ra (sau 4.5 gi√¢y)
            setTimeout(() => {
                spreadInCircle();
            }, 4500);
        }

        function gatherToCenter() {
            updateInfo('Phase 2: Pulling into black hole (1.5s)...');
            const networks = document.querySelectorAll('.network');
            const blackHole = document.getElementById('blackHole');
            
            networks.forEach(net => {
                // L·∫•y v·ªã tr√≠ hi·ªán t·∫°i khi ƒëang xoay
                const computedStyle = window.getComputedStyle(net);
                const matrix = computedStyle.transform;
                
                // T√≠nh to√°n v·ªã tr√≠ hi·ªán t·∫°i
                if (matrix && matrix !== 'none') {
                    const values = matrix.match(/matrix.*\((.+)\)/)[1].split(', ');
                    const currentX = parseFloat(values[4]);
                    const currentY = parseFloat(values[5]);
                    
                    // D·ª´ng animation v√† ƒë·∫∑t v·ªã tr√≠ hi·ªán t·∫°i
                    net.style.animation = 'none';
                    net.style.transform = `translate(${currentX}px, ${currentY}px)`;
                    
                    // Force reflow
                    net.offsetHeight;
                    
                    // Th√™m class phase2
                    net.className = 'network phase2';
                    
                    // H√∫t v√†o trung t√¢m v√† ·∫©n ƒëi
                    setTimeout(() => {
                        net.style.transform = 'translate(0, 0) scale(0)';
                        net.style.opacity = '0';
                    }, 10);
                } else {
                    net.className = 'network phase2';
                    net.style.transform = 'translate(0, 0) scale(0)';
                    net.style.opacity = '0';
                }
            });

            // Hi·ªán h·ªë ƒëen sau khi networks bi·∫øn m·∫•t
            setTimeout(() => {
                blackHole.classList.add('active');
            }, 800);
        }

        function spreadInCircle() {
            updateInfo('Phase 3: Spread in circle - DONE! ‚úÖ');
            const networks = document.querySelectorAll('.network');
            const blackHole = document.getElementById('blackHole');
            
            // ·∫®n h·ªë ƒëen
            blackHole.classList.remove('active');
            
            // T√≠nh b√°n k√≠nh responsive
            const isMobile = window.innerWidth <= 768;
            const radius = isMobile ? 180 : 280;
            
            networks.forEach(net => {
                net.className = 'network phase3';
                
                const angle = parseInt(net.getAttribute('data-angle'));
                const radian = (angle - 90) * (Math.PI / 180);
                
                // T√≠nh v·ªã tr√≠ tr√™n ƒë∆∞·ªùng vi·ªÅn tr√≤n
                const x = Math.cos(radian) * radius;
                const y = Math.sin(radian) * radius;
                
                // Hi·ªán l·∫°i networks v√† bung ra
                net.style.opacity = '1';
                net.style.transform = `translate(${x}px, ${y}px) scale(1)`;
            });
        }

        function updateInfo(text) {
            document.getElementById('info').textContent = text;
        }

        // Auto start khi load trang
        window.addEventListener('load', () => {
            restart();
        });

        // Responsive: t√≠nh l·∫°i khi resize
        let resizeTimeout;
        window.addEventListener('resize', () => {
            clearTimeout(resizeTimeout);
            resizeTimeout = setTimeout(() => {
                const networks = document.querySelectorAll('.network.phase3');
                if (networks.length > 0) {
                    spreadInCircle();
                }
            }, 100);
        });
    </script>

</body>
</html>
